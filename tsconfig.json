{
    "compilerOptions": {
        "outDir": "dist",
        "rootDirs": ["src", "tests"],
        "target": "es2021",
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
          "@/*":["*"],
          "@/tests/*":["../tests/*"],
        },
        "strict": true,
    },
    "include": ["src", "tests"]
}
