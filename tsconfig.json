{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2021",
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
          "@/*":["*"],
          "@/tests/*":["../tests/*"],
        },
        "strict": true,
        // "strictNullChecks": true,
        // "strictFunctionTypes": true,
        // "strictPropertyInitialization": true,
        // "noImplicitAny": true 
    },
    "include": ["src"]
}
